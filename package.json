{
  "name": "y-eye",
  "version": "0.1.0",
  "description": "OSINT Intelligence Platform for tracking illegal webtoon site operators",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev:web": "WEB_PREVIEW=1 vite --host 0.0.0.0 --port 3000",
    "build:web": "WEB_PREVIEW=1 vite build",
    "build": "tsc && vite build && electron-builder",
    "build:vite": "tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build:vite && electron-builder --mac",
    "typecheck": "tsc --noEmit"
  },
  "author": "",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@types/pg": "^8.16.0",
    "better-sqlite3": "^11.7.0",
    "date-fns": "^3.3.1",
    "pg": "^8.18.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.22.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^28.2.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.35",
    "serve": "^14.2.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.0",
    "vite-plugin-electron": "^0.28.4",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.yeye.osint",
    "productName": "Y-EYE",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg"
      ],
      "icon": "build/icon.png"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "extraResources": [
      {
        "from": "node_modules/better-sqlite3/build",
        "to": "better-sqlite3/build"
      }
    ]
  }
}
